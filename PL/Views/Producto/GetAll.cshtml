@model ML.Producto

<link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />
<div class="text-center">
    <h1>Lista de Productos</h1>
</div>
<hr />
<body class="custom-background">
    <div class="row">
        @foreach (ML.Producto producto in Model.Productos)
        {
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="#" class="image">
                            <img class="pic-1" src="data:image/*;base64,@producto.Imagen">
                            <img class="pic-2" src="https://static.vecteezy.com/system/resources/previews/003/092/544/original/e-commerce-logo-with-pointer-and-shopping-bag-free-vector.jpg">
                        </a>
                        <a href="" class="product-like-icon"><i class="far fa-heart"></i></a>
                        <ul class="product-links">
                            <li><a href="#"><i class="far fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-random"></i></a></li>
                            <li><a href="#"><i class="fa fa-eye"></i></a></li>
                            <li><a href="@Url.Action("AgregarProducto","Venta", new {idProducto = producto.IdProducto})"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product-content">
                        <h3 class="title"><a href="#">@producto.Nombre</a></h3>
                        <div class="price">$@producto.Precio</div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>